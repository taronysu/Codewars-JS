function pythagoreanTriplet (n) {
  for (let a = 1; a <= Math.floor(n ** (1/3)); a++) {
        for (let b = a + 1; b <= Math.floor(n ** (1/2)); b++) {
            let c = Math.sqrt(a ** 2 + b ** 2);
            if (a * b * c === n && Number.isInteger(c)) {
                return [a, b, c];
            }
        }
    }
    return null;
}
