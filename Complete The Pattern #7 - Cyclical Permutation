https://www.codewars.com/kata/557592fcdfc2220bed000042/train/javascript

function pattern(n){
 if (n <= 0) {
        return "";
    }
    
    let result = "";
    for (let i = 0; i < n; i++) {
        for (let j = 0; j < n; j++) {
            result += (i + j) % n + 1;
        }
        result += "\n";
    }
    
    return result.trim();
}
