function task(w, t, c) {
const days = {
        'Monday': 'James',
        'Tuesday': 'John',
        'Wednesday': 'Robert',
        'Thursday': 'Michael',
        'Friday': 'William'
    };
    return `It is ${w} today, ${days[w]}, you have to work, you must spray ${t} trees and you need ${c * t} dollars to buy liquid`;
}
