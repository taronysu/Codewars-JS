function comes_after(st,l) {
let s = '';
    for (let i = 0; i < st.length - 1; i++) {
        if (st[i].toLowerCase() === l.toLowerCase() && /^[a-zA-Z]$/.test(st[i + 1])) {
            s += st[i + 1];
        }
    }
    return s;
}
